{
  "name": "react-design-system",
  "version": "0.0.0",
  "description": "React-based design system",
  "repository": {
    "url": "https://github.com/mrmartineau/react-design-system.git",
    "type": "git"
  },
  "author": {
    "name": "Zander Martineau",
    "url": "https://zander.wtf"
  },
  "license": "MIT",
  "main": "build/cjs.js",
  "types": "build/index.d.ts",
  "module": "build/esm.js",
  "scripts": {
    "test": "cross-env CI=true jest --colors",
    "test:watch": "yarn test --watch --colors",
    "test:coverage": "yarn test --coverage --colors",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "playroom:start": "playroom start",
    "playroom:build": "playroom build",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "tslint \"./src/**/*.{ts,tsx}\"",
    "lint:fix": "tslint \"./src/**/*.{ts,tsx}\" --fix -p tsconfig.json",
    "lint:css": "stylelint './src/**/*.{ts,tsx}'",
    "format": "prettier --write \"src/**/*.*\" \"generate/**/*.*\" \"docs/**/*.*\" \"*.json\" \"*.js\" \"*.md\"",
    "clean": "rimraf build && rimraf node_modules",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "design-system-utils": "^1.5.0",
    "styled-system": "^4.1.0"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@storybook/addon-a11y": "^5.0.10",
    "@storybook/addon-actions": "^5.0.10",
    "@storybook/addon-backgrounds": "^5.0.10",
    "@storybook/addon-info": "^5.0.10",
    "@storybook/addon-knobs": "^5.0.10",
    "@storybook/addon-links": "^5.0.10",
    "@storybook/addon-storysource": "^5.0.10",
    "@storybook/addon-viewport": "^5.0.10",
    "@storybook/react": "^5.0.10",
    "@types/storybook__react": "^4.0.1",
    "babel-loader": "^8.0.5",
    "babel-preset-react-app": "^8.0.0",
    "cross-env": "^5.2.0",
    "cypress": "^3.2.0",
    "eslint": "^5.16.0",
    "jest": "^24.7.1",
    "jest-dom": "^3.1.3",
    "jest-styled-components": "^6.3.1",
    "playroom": "^0.9.1",
    "plop": "^2.3.0",
    "prettier": "^1.17.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^7.0.0",
    "rimraf": "^2.6.3",
    "storybook-dark-mode": "^0.1.3",
    "storybook-readme": "^5.0.2",
    "styled-components": "^4.2.0",
    "stylelint": "^10.0.1",
    "typescript": "^3.4.5"
  }
}
