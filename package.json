{
  "name": "react-design-system-starter-kit",
  "version": "0.0.0",
  "description": "React-based design system start kit",
  "repository": {
    "url": "https://github.com/mrmartineau/react-design-system.git",
    "type": "git"
  },
  "author": {
    "name": "Zander Martineau",
